<% provide(:title, 'Edit Profile') %>
<div class="row grid-margin">
<div class="col-lg-12">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Edit Profile</h4>
      <%=form_for @user, html: {multipart: true} do |f|%>
        <fieldset>
          <div class="form-group">
            <label for="cname">Fullname (required, at least 2 characters)</label>           
            <%=f.text_field :fullname, class: 'form-control', :required=>true%>
          </div>
          <div class="form-group">
            <label for="cgender">Gender (required)</label>
            <%=f.text_field :is_male, class: 'form-control', :required => true %>
          </div>
          <div class="form-group">
            <label for="cemail">E-Mail (required)</label>
            <%=f.text_field :email, class: 'form-control', :required => true %>
          </div>
          
          <div class="form-group">
            <label for="cphone">Phone (required)</label>
            <%=f.text_field :phone, class: 'form-control', :required => true %>
          </div>
          <div class="form-group">
            <label for="caddress">Address (required)</label>
            <%=f.text_field :address, class: 'form-control', :required => true %>
          </div>
          <div class="form-group">
            <label for="cposition">Position (required)</label>
            <%=f.text_field :position, class: 'form-control', :required => true, :disabled => true %>
          </div>
          <div class="form-group">
            <label for="cpicture">Avatar</label>
            <%=f.file_field :picture%>
          </div>
     
        
          <input class="btn btn-primary" type="submit" value="Submit">
        </fieldset>
      <% end%>
    </div>

  </div>
</div>
</div>
<%= link_to 'Back', home_path %>
  