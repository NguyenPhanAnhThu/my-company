<% provide(:title, 'Edit News') %>
<% flash.each do |type, msg| %>
    <div class="alert alert-<%=type%>">
      <%= msg %>
    </div>
  <% end %>
<div class="col-12 grid-margin stretch-card">
<div class="card">
  <div class="card-body">
    <h4 class="card-title">Edit</h4>
    <p class="card-description">
      Edit project
    </p>

    <%=form_for @customer, local: true do |f|%>
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
          <div class="form-group">
            <label for="exampleInputName1">Link</label>
            <%=f.text_field :link, class: 'form-control', placeholder: 'Enter Link', :required=>true%>
          </div>
      
          <div class="form-group">
            <label for="exampleInputPassword4">Image</label>
            <%=f.file_field :img%>
          </div>
          </div>
          <div class="modal-footer">
           
            <%=f.submit ("SUBMIT"), class:'btn btn-gradient-primary mr-2'%>
            <%=link_to ("CANCEL"), project_index_path, class: 'btn btn-light'%> 
          </div>
        </div>
      <% end %>
  </div>
</div>
</div>