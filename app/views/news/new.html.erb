<% provide(:title, 'Add News') %>
<div class="col-12 grid-margin stretch-card">
<div class="card">
  <div class="card-body">
    <h4 class="card-title">Add News</h4>
    <p class="card-description">
      Add News
    </p>
    <% flash.each do |type, msg| %>
      <div class="alert alert-<%=type%>">
        <%= msg %>
      </div>
    <% end %>
    <%=form_for @news,local: true, html: {multipart: true} do |f|%>
      <div class="form-group">
        <label for="exampleInputName1">Title</label>
        <%=f.text_field :title, class: 'form-control', placeholder: 'Enter Title', :required=>true%>
      </div>
      <div class="form-group">
        <label for="">Infor</label>
        <%=f.text_field :infor, class: 'form-control', placeholder: 'Enter Title', :required=>true%>
      </div>
      <div class="form-group">
        <label for="exampleTextarea1">Full</label>
       
        <%=f.rich_text_area :description, class: 'form-control', size: '60x30', :required=>true, placeholder: 'Enter full of news'%>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword4">Image</label>
        <%=f.file_field :img%>
      </div>
      <div class="form-checkform-check-primary">
        <label class="form-check-label">
        View
        </label>
        <%=f.radio_button :checked, true%>
        <%=f.label :checked, "Yes", :value=>"true"%>
        <%=f.radio_button :checked, false%>
        <%=f.label :checked, "No", :value=>"false"%>
      </div>
      <br>
   
    <%= f.hidden_field :user_id, value: current_user.id %>

      <%=f.submit ("SUBMIT"), class:'btn btn-gradient-primary mr-2'%>
      <%=link_to ("CANCEL"), news_index_path, class: 'btn btn-light'%>    
    <% end %>
  </div>
</div>
</div>
